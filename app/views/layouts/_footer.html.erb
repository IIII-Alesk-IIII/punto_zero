            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
          </svg>
        </button>
      </div>
    </div>

    <div>
      <h3 class="text-sm font-bold text-yellow-800 text-[15px] tracking-wider mb-4 md:pl-10"> <%= progetti %> </h3>
      <ul class="text-yellow-600 text-sm space-y-2 md:pl-10">
        <li><a href="/progetti" class="hover:text-yellow-500"> <%= progetti_case %> </a></li>
        <li><a href="/progetti" class="hover:text-yellow-500"> <%= progetti_importanti %> </a></li>
        <li><a href="/progetti" class="hover:text-yellow-500"> <%= progetti_parchi %> </a></li>
