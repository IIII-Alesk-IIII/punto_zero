    <div>
      <h3 class="text-sm font-bold text-yellow-800 text-[15px] tracking-wider mb-4 md:pl-10"> <%= storia %> </h3>
      <ul class="text-yellow-600 text-sm space-y-2 md:pl-10">
        <li><a href="/storia" class="hover:text-yellow-500"> <%= chi_siamo %> </a></li>
        <li><a href="/lavora" class="hover:text-yellow-500"> <%= lavora %> </a></li>
      </ul>
    </div>

    <div>
      <h3 class="text-sm font-bold text-yellow-800 text-[15px] tracking-wider mb-4 md:pl-10"> <%= social %> </h3>
      <ul class="text-yellow-600 text-sm space-y-2 md:pl-10">
        <li><a href="https://www.facebook.com/donboscosandona/?locale=it_IT" class="hover:text-yellow-500"> <%= facebook %> </a></li>
        <li><a href="https://www.instagram.com/donboscosandona/?hl=it" class="hover:text-yellow-500"> <%= instagram %> </a></li>
